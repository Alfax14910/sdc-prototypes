---
title: Enter your name
group: Census
version: 7.0.0
layout: rh-census/views/_master
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "prototypes/rh-census/components/uac-entry/_macro.njk" import onsUACEntry %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/panel/_macro.njk" import onsPanel %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": "/prototypes/rh-census/code-sent-letter.html"
    }
} %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}">Previous</a>
    {% call onsQuestion({
        "title": "Who shall we address the letter to?",
        "useFieldset": true
    }) %}

    {% from "components/input/_macro.njk" import onsInput %}
    {{ 
        onsInput({
            "id": "first-name",
            "label": {
                "text": "First name"
            }
        }) 
    }}

    {{ 
        onsInput({
            "id": "middle-name",
            "label": {
                "text": "Middle name (optional)"
            }
        }) 
    }}

    {{ 
        onsInput({
            "id": "last-name",
            "label": {
                "text": "Last name"
            }
        }) 
    }}
    
    {% endcall %}
    
    {{
        onsButton({
            "text": "Continue",
            "classes": "u-mt-l"
        })
    }}
    
{% endblock %}
