---
title: How do you want to receive the access code
group: Census
version: 7.0.0
layout: rh-census/views/_master
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "prototypes/rh-census/components/uac-entry/_macro.njk" import onsUACEntry %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/panel/_macro.njk" import onsPanel %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": "/prototypes/rh-census/confirm-mobile-number.html"
    }
} %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}">Previous</a>
    {% call onsQuestion({
        "title": "How do you want to receive an access code?",
        "useFieldset": true
    }) %}

    {% from "components/radios/_macro.njk" import onsRadios %}
    {{ 
        onsRadios({
            "name": "food",
            "radios": [
                {
                    "id": "text-checkbox",
                    "label": {
                        "text": "Text an access code"
                    },
                    "value": "text",
                    "other": {
                        "id": "text-textbox",
                        "type": "tel",
                        "autocomplete": "tel",        
                        "classes": "input--w-8",
                        "label": {
                            "text": "Enter mobile number"
                        }
                    }
                },
                {
                    "id": "email-checkbox",
                    "label": {
                        "text": "Email an access code"
                    },
                    "value": "text",
                    "other": {
                        "id": "email-textbox",
                        "type": "email",
                        "autocomplete": "email",
                        "label": {
                            "text": "Enter email address"
                        }
                    }
                },
                {
                    "id": "letter",
                    "label": {
                        "text": "Send a letter with an access code"
                    },
                    "value": "letter"
                }
            ]
        }) 
    }}
    {% endcall %}

    {{
        onsButton({
            "text": "Continue",
            "classes": "u-mt-l"
        })
    }}

{% endblock %}
