title: Enter your mobile number
group: Census
version: 7.0.0
layout: rh-census/views/_master
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "prototypes/rh-census/components/uac-entry/_macro.njk" import onsUACEntry %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/panel/_macro.njk" import onsPanel %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action": "/prototypes/rh-census/confirm-mobile-number.html"
    }
} %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}">Previous</a>
    {% call onsQuestion({
        "title": "What is your mobile phone number?",
        "useFieldset": true
    }) %}

    <p>We will send an access code by text to this number</p>

    {% from "components/input/_macro.njk" import onsInput %}
    {{ 
        onsInput({
            "id": "telephone",
            "type": "tel",
            "autocomplete": "tel",        
            "classes": "input--w-8",
            "label": {
                "text": "Enter mobile number"
            }
        }) 
    }}
    
    {% endcall %}
    
    {{
        onsButton({
            "text": "Continue",
            "classes": "u-mt-l"
        })
    }}
    
{% endblock %}
