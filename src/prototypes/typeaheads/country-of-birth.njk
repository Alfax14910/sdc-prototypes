{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% block content %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}/address.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/passport.html">
        {{ 
            onsRadios({
                "legend": " <h1 class=\"u-fs-l\">What is your country of birth?</h1>",
                "name": "country-of-birth",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "england",
                        "label": {
                            "text": "England"
                        },
                        "value": "england",
                        "name": "england"
                    },
                    {
                        "id": "wales",
                        "label": {
                            "text": "Wales"
                        },
                        "value": "wales",
                        "name": "wales"
                    },
                     {
                        "id": "scotland",
                        "label": {
                            "text": "Scotland"
                        },
                        "value": "scotland",
                        "name": "scotland"
                    },
                    {
                        "id": "northern-ireland",
                        "label": {
                            "text": "Northern Ireland"
                        },
                        "value": "northern-ireland",
                        "name": "northern-ireland"
                    },
                    {
                        "id": "replublic-of-ireland",
                        "label": {
                            "text": "Republic of Ireland"
                        },
                        "value": "replublic-of-ireland",
                        "name": "replublic-of-ireland"
                    },
                    {
                        "id": "other",
                        "label": {
                            "text": "Elsewhere"
                        },
                        "value": "elsewhere",
                        "name": "elsewhere",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/country-of-birth-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
