---
version: 0.5.0
layout: typeaheads/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "typeaheads/views/partials/_radios-with-or.njk" import onsRadiosWithOr %}

{% block content %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}/student-check.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/passport.html">
        {{ 
            onsRadiosWithOr({
                "legend": " <h1 class=\"u-fs-l\">What is your country of birth?</h1>",
                "name": "country-of-birth",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "england",
                        "label": {
                            "text": "England"
                        },
                        "name": "England"
                    },
                    {
                        "id": "wales",
                        "label": {
                            "text": "Wales"
                        },
                        "name": "Wales"
                    },
                     {
                        "id": "scotland",
                        "label": {
                            "text": "Scotland"
                        },
                        "name": "scotland"
                    },
                    {
                        "id": "northern-ireland",
                        "label": {
                            "text": "Northern Ireland"
                        },
                        "name": "northern-ireland"
                    },
                    {
                        "id": "replublic-of-ireland",
                        "label": {
                            "text": "Republic of Ireland"
                        },
                        "name": "replublic-of-ireland"
                    },
                    {
                        "preLabel": "Or",
                        "id": "other",
                        "label": {
                            "text": "Other country"
                        },
                        "name": "elsewhere",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/country-of-birth-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
