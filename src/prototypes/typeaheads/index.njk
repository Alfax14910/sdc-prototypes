---
title: Typeaheads
group: Typeaheads
version: 0.5.0
layout: typeaheads/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "typeaheads/components/address-input/_macro.njk" import prototypeAddressInput %}

{% block content %}
    <form action="{{ pageInfo.parentPath }}/name.html">
        {{
            prototypeAddressInput({
                "id": "address",
                "questionMode": true,
                "label": {
                    "text": "Initialise prototype",
                    "description": "The researcher testing this prototype should ask the person they are testing with for their address and fill this in for them before handing over the prototype."
                },
                "line1": {
                    "label": "Building and street <span class=\"u-vh\">line 1 of 2</span>"
                },
                "line2": {
                    "label": "Building and street line 2 of 2"
                },
                "town": {
                    "label": "Town or City"
                },
                "county": {
                    "label": "County"
                },
                "postcode": {
                    "label": "Postcode"
                },
                "typeahead": {
                    "label": {
                        "text": "Please enter your address or postcode"
                    },
                    "instructions": "Use up and down keys to navigate results once you\'ve typed more than two characters. Use the enter key to select a result. Touch device users, explore by touch or with swipe gestures.",
                    "content": {
                        "no_results": "No results found",
                        "aria_no_results": "No results found for the query",
                        "aria_you_have_selected": "You have selected",
                        "aria_found_by_alternative_name": "found by alternative name",
                        "aria_min_chars": "Type in 5 or more characters for results.",
                        "aria_one_result": "There is one result available.",
                        "aria_n_results": "There are {n} results available.",
                        "aria_limited_results": "Results have been limited to 10 results. Type more characters to refine your search.",
                        "more_results": "Continue typing to refine results"
                    },
                    "autocomplete": "new-address"
                },
                "or": "Or",
                "searchButton": "Search for an address",
                "manualButton": "Manually enter address"
            })
        }}

        <p class="u-mt-m"><em>Or</em><br>
            {{ onsButton({
                "text": "Use dummy address",
                "classes": "btn--small u-mt-s js-set-dummy-address"
              }) }}
        </p>
        
        {{ onsButton({
                "text": "Start",
                "classes": "u-mt-l"
        }) }}
    </form>
    <script>
        // Wake up heroku instance
        var xhttp = new XMLHttpRequest();
        xhttp.open("GET", "https://ons-typeahead-prototypes.herokuapp.com");
        xhttp.send();
    </script>
{% endblock %}
