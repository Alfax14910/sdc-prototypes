---
version: 0.5.0
layout: typeaheads/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "typeaheads/views/partials/_radios-with-or.njk" import onsRadiosWithOr %}

{% block content %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}/ethnic-group.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/religion.html?previous={{ pageInfo.path }}.html">
        {{ 
            onsRadiosWithOr({
                "legend": "<h1 class=\"u-fs-l\">Which one best describes your Asian or Asian British ethnic group or background?</h1>",
                "name": "ethnic-group-asian",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "a",
                        "label": {
                            "text": "Indian"
                        },
                        "name": "a"
                       
                    },
                    {
                        "id": "b",
                        "label": {
                            "text": "Pakistani"
                        },
                        "name": "b"
                       
                    },
                    {
                        "id": "c",
                        "label": {
                            "text": "Bangladeshi"
                        },
                        "name": "c"
                       
                    },
                    {
                        "id": "d",
                        "label": {
                            "text": "Chinese"
                        },
                        "name": "d"
                       
                    },
                    {
                        "id": "other",
                        "preLabel": "Or",
                        "label": {
                            "text": "Other Asian ethnic group or background",
                            "description": "You can enter this on the next question"
                        },
                        "name": "other",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-asian-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
