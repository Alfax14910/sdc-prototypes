---
version: 0.1.13
layout: typeaheads/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% block content %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}/ethnic-group.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/employment-status.html?previous={{ pageInfo.path }}.html">
        {{ 
            onsRadios({
                "legend": "<h1>Which one best describes your Mixed or Multiple ethnic group or background?</h1>",
                "name": "ethnic-group-mixed",
                "classes": "u-mb-xl u-mt-s",
                "radios": [
                    {
                        "id": "a",
                        "label": {
                            "text": "White and Black Caribbean"
                        },
                        "value": "a",
                        "name": "a"
                       
                    },
                    {
                        "id": "b",
                        "label": {
                            "text": "White and Black African"
                        },
                        "value": "b",
                        "name": "b"
                       
                    },
                    {
                        "id": "c",
                        "label": {
                            "text": "White and Asian"
                        },
                        "value": "c",
                        "name": "c"
                       
                    },
                    {
                        "id": "other",
                        "label": {
                            "text": "Any other Mixed or Multiple background"
                        },
                        "value": "other",
                        "name": "other",
                        "attributes": {
                            "data-other-url": pageInfo.parentPath + "/ethnic-group-mixed-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
            onsButton({
                "text": "Save and continue"
            })
        }}
    </form>
{% endblock %}
