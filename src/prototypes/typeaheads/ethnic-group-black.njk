---
version: 0.5.0
layout: typeaheads/views/_master
---
{% from "components/button/_macro.njk" import onsButton %}
{% from "typeaheads/views/partials/_radios-with-or.njk" import onsRadiosWithOr %}

{% block content %}
    <a class="previous-link js-previous" href="{{ pageInfo.parentPath }}/ethnic-group.html">Previous</a>
    <form action="{{ pageInfo.parentPath }}/religion.html?previous={{ pageInfo.path }}.html">
        {{ 
            onsRadiosWithOr({
                "legend": "<h1 class=\"u-fs-l\">Which one best describes your Black, African, Caribbean or Black British ethnic group or background?</h1>",
                "name": "ethnic-group-black",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "a",
                        "label": {
                            "text": "African"
                        },
                        "name": "a"
                       
                    },
                    {
                        "id": "b",
                        "label": {
                            "text": "Caribbean"
                        },
                        "name": "b"
                       
                    },
                    {
                        "id": "other",
                        "preLabel": "Or",
                        "label": {
                            "text": "Any other Black, African or Caribbean background"
                        },
                        "name": "other",
                        "attributes": {
                            "data-action-url": pageInfo.parentPath + "/ethnic-group-black-other.html"
                        }
                    }
                ]
            }) 
        }}
        {{
           onsButton({
                "text": "Save and continue",
                "classes": "u-mt-l"
            })
        }}
    </form>
{% endblock %}
