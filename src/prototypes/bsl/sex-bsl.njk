{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/video/_macro.njk" import onsVideo %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/index-bsl.html">Previous</a>
    <form action="{{ pageInfo.rootPath }}/country-of-birth-bsl.html">
        <div class = "div-margin grid__col col-5@m">
            {{
                onsRadios({
                    "legend": "<h1 class=\"u-fs-l\">What is your sex?</h1>",
                    "name": "sex",
                    "radios": [
                        {
                            "id": "male",
                            "label": {
                                "text": "Male"
                            },
                            "value": "male"
                        },
                        {
                            "id": "female",
                            "label": {
                                "text": "Female"
                            },
                            "value": "female"
                        }
                    ]
                }) 
            }}
            {{ onsButton({
                "text": "Save and continue",
                "classes": "u-mt-xl"
            }) }}
        </div>
        <div class = "grid__col col-6@m grid--flex">
            {{
                onsVideo({
                    "youtubeUrl": "https://www.youtube.com/embed/9Rv2kEibKXA"
                })
            }}
        </div>
    </form>
{% endblock %}
