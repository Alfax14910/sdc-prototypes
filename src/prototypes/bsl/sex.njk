{% from "components/button/_macro.njk" import onsButton %}
{% from "components/radios/_macro.njk" import onsRadios %}

{% block main %}
    <a class="previous-link js-previous" href="{{ pageInfo.rootPath }}/index.html">Previous</a>
    <form action="{{ pageInfo.rootPath }}/country-of-birth.html">
        {{ 
            onsRadios({
                "legend": "<h1 class=\"u-fs-l\">What is your sex?</h1>",
                "name": "sex",
                "classes": "u-mt-s",
                "radios": [
                    {
                        "id": "male",
                        "label": {
                            "text": "Male"
                        },
                        "value": "male"
                    },
                    {
                        "id": "female",
                        "label": {
                            "text": "Female"
                        },
                        "value": "female"
                    }
                ]
            }) 
        }}
        {{ onsButton({
            "text": "Save and continue",
            "classes": "u-mt-xl"
        }) }}
    </form>
{% endblock %}
