---
version: 15.0.2
layout: bsl/views/_question
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/input/_macro.njk" import onsInput %}
{% from "components/radios/_macro.njk" import onsRadios %}
{% from "components/panel/_macro.njk" import onsPanel %}
{% from "components/details/_macro.njk" import onsDetails %}
{% from "components/video/_macro.njk" import onsVideo %}

{% set form =  {
    "method": "GET",
    "attributes": {
        "action":  pageInfo.rootPath + "/marital-status.html"
    }
} %}
    {% block preMain %}
    <div class="container page__container container u-mt-s">
        <a href="/prototypes/bsl/name.html">Previous</a>
    </div>
    {% endblock %}
    {% block main %}
        {% call onsQuestion({
            "title": "What is your sex?",
            "useFieldset": true
        }) %}
           {% call onsPanel({
            }) %}
                <p>A question about gender will follow</p>
            {% endcall %}

            {{ onsRadios({
                "noField": true,
                "id": "do-you-live",
                "name": "do-you-live",
                "classes": "js-radios",
                "radios": [
                    {
                        "id": "female",
                        "label": {
                            "text": "Female"
                        }
                    },
                    {
                        "id": "male",
                        "label": {
                            "text": "Male"
                        }
                    }
                ]
            }) }}
        {% endcall %}

        {{ onsButton({
            "text": "Save and continue",
            "classes": "u-ml-no u-mt-xl u-mb-xl"
        }) }}

        <div class="bsl-video u-d-no">
            {{ onsButton({
                "text": "Hide BSL",
                "classes": "u-mb-xs u-fr js-bsl-btn btn--secondary u-mt-l",
                "innerClasses": "icon--bsl-btn"
            }) }}
            <div class="bsl-video__video">
                <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/uyQgkQ4UD6k" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>                            
            </div>
        </div>        
    {% endblock %}
